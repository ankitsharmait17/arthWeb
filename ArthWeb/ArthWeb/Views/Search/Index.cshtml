
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MatLayout.cshtml";
    Dictionary<string, List<string>> catList = ViewBag.DDList;
    string markup = null;
    
    foreach (var item in catList)
    {
        markup += "<li>";
        markup += "<div class='collapsible-header'>"+item.Key+"</div>";
        markup += "<div class='collapsible-body'>";
        markup+="<ul class='list-unstyled'>";
        foreach (string subType in item.Value)
        {
            markup += "<li>";
            markup+="<label for='"+subType+"'>";
            markup+="<input type='checkbox' id='"+subType+"'><span>"+subType+"</span>";
            markup += "</label></li>";
        }
        markup += "</ul></div></li>";
    }
    
}

<style>


    .list-group-item {
        border-left: 0;
    }

    .group-first {
        border-top: 0;
    }

    .group-last {
        border-bottom: 0;
    }

    .grid-img {
        width: 250px;
        height: 400px;
    }

    .img-div {
        padding: 20px;
    }

    .overlay {
        display: none;
    }



    .card-title {
        display: none;
    }

    .card-image:hover .card-title {
        display: block;
    }

    .card-image > img {
        width: 100px;
        height: 400px;
    }

    .sidenav li{
        margin:10px;
    }
</style>

<ul id="slide-out" class="sidenav">
