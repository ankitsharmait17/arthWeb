                            <label for="s">
                                <input type="checkbox" id="s"><span>S</span>
                            </label>
                        </li>
                        <li>
                            <label for="m">
                                <input type="checkbox" id="m"><span>M</span>
                            </label>
                        </li>
                        <li>
                            <label for="l">
                                <input type="checkbox" id="l"><span>L</span>
                            </label>
                        </li>
                    </ul>
                </div>
            </li>
            <li><div class="divider"></div></li>
            <li>
                <div class="collapsible-header">PRICE</div>
                <div class="collapsible-body">
                    <ul class="list-unstyled">
                        <li>
                            <label for="r1">
                                <input type="checkbox" id="r1"><span>Rs.500 to Rs.1000</span>
                            </label>
                        </li>
                        <li>
                            <label for="r2">
                                <input type="checkbox" id="r2"><span>Rs.1000 to Rs.5000</span>
                            </label>
                        </li>
                        <li>
                            <label for="r3">
                                <input type="checkbox" id="r3"><span>Rs.5000 to Rs.20000</span>
                            </label>
