
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MatLayout.cshtml";
}

<style>
    

    .list-group-item {
        border-left: 0;
    }

    .group-first {
        border-top: 0;
    }

    .group-last {
        border-bottom: 0;
    }

    .grid-img {
        width: 250px;
        height: 400px;
    }

    .img-div {
        padding: 20px;
    }

    .overlay {
        display: none;
    }

    

    .card-title {
        display: none;
    }

    .card-image:hover .card-title {
        display: block;
    }

    .card-image>img{
        width: 100px;
        height: 400px;
    }

</style>


 <div class="container-fluid">
